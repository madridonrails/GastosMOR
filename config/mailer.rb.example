ActionMailer::Base.server_settings = { 
  :address        => "domain.of.smtp.host.net", 
  :port           => 25, 
  :domain         => "domain.of.sender.net", 
  :authentication => :login,                  # if needed, it can be :plain, :login, or :cram_md5
